<Application x:Class="SimpleMenuApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimpleMenuApp"
             xmlns:viewModel="clr-namespace:SimpleMenuApp.MVVM.ViewModel"
             xmlns:view="clr-namespace:SimpleMenuApp.MVVM.View__Display_"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/MenuButtons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:MainsViewModel}">
                <view:MainsView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewModel:SidesViewModel}">
                <view:SidesView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:DesertsViewModel}">
                <view:DesertsView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
